---
import Layout from "../layouts/Layout.astro";
import { DATA_TYPES } from "../utils/caltrans";
import {
	Card,
	CardHeader,
	CardTitle,
	CardContent,
} from "../components/ui/card";

export const prerender = true;
Astro.response.headers.set("Cache-Control", "public, max-age=86400");

const cardData = [
	{
		id: "cctv",
		title: "Highway Cameras",
		description:
			"The location and status of each Caltrans camera located on the State Highway Network.",
	},
	{
		id: "cms",
		title: "Changeable Message Signs",
		description:
			"All Roadway message signs (511, Traffic Status, Amber Alerts) located on the State Highway Network.",
	},
	{
		id: "cc",
		title: "Chain Control Signs",
		description:
			"The location and status of each Caltrans' chain control point located on the State Highway Network.",
	},
	{
		id: "rwis",
		title: "Roadside Weather Information",
		description:
			"150 weather sensors in rural areas and roads with reoccurring weather.",
	},
	{
		id: "lcs",
		title: "Lane Closures",
		description:
			"All approved closures planned for the next 7 days, plus all current lane, ramp, and road closures.",
	},
	{
		id: "tt",
		title: "Travel Times",
		description:
			"Caltrans travel time segments located on selected routes within the State Highway Network.",
	},
];
---

<Layout title="California Road Data">
	<div class="max-w-6xl mx-auto">
		<!-- Header -->
		<div class="text-center mb-16">
			<h1
				class="text-5xl md:text-6xl font-bold mb-6 tracking-tight text-black"
			>
				California Road Data
			</h1>
			<p
				class="text-black text-sm md:text-base max-w-3xl mx-auto leading-relaxed"
			>
				A consolidated collection of all public available cameras<br />
				and other road related data in the state of California
			</p>
		</div>

		<!-- Grid -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
			{
				cardData.map((card) => (
					<a
						href={`/${card.id}`}
						class="group relative bg-white border-2 border-black rounded-lg p-8 transition-all hover:shadow-lg"
					>
						<h2 class="text-xl font-bold mb-4 leading-tight text-black">
							{card.title}
						</h2>

						<p class="text-black text-sm leading-relaxed">
							{card.description}
						</p>

						<div class="mt-6 text-black text-sm font-medium animate-pulse">
							Explore ‚Üí
						</div>
					</a>
				))
			}
		</div>
	</div>

	<div class="max-w-6xl mx-auto mt-20 px-4">
		<h2 class="text-3xl font-bold mb-6 text-center text-black">
			About California Road Data
		</h2>
		<p class="text-gray-600 text-center max-w-3xl mx-auto mb-10">
			California Road Data is your comprehensive source for real-time
			travel information across the Golden State. We aggregate live feeds
			from <strong>Caltrans</strong> to provide instant access to:
		</p>

		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
			<Card className="bg-white border-2 border-white shadow-none">
				<CardHeader className="pb-2">
					<CardTitle className="flex items-center gap-2 text-lg">
						üì∑ Traffic Cameras
					</CardTitle>
				</CardHeader>
				<CardContent className="text-sm text-gray-600">
					View live congestion and weather conditions.
				</CardContent>
			</Card>

			<Card className="bg-white border-2 border-white shadow-none">
				<CardHeader className="pb-2">
					<CardTitle className="flex items-center gap-2 text-lg">
						‚õìÔ∏è Chain Controls
					</CardTitle>
				</CardHeader>
				<CardContent className="text-sm text-gray-600">
					Essential updates for winter travel in the Sierra Nevada.
				</CardContent>
			</Card>

			<Card className="bg-white border-2 border-white shadow-none">
				<CardHeader className="pb-2">
					<CardTitle className="flex items-center gap-2 text-lg">
						üöß Lane Closures
					</CardTitle>
				</CardHeader>
				<CardContent className="text-sm text-gray-600">
					Planned construction and emergency closure alerts.
				</CardContent>
			</Card>

			<Card className="bg-white border-2 border-white shadow-none">
				<CardHeader className="pb-2">
					<CardTitle className="flex items-center gap-2 text-lg">
						‚ö†Ô∏è Message Signs
					</CardTitle>
				</CardHeader>
				<CardContent className="text-sm text-gray-600">
					Read active roadway alerts and safety warnings.
				</CardContent>
			</Card>
		</div>

		<p class="mt-10 text-sm text-gray-500 text-center">
			Whether you're commuting in the Bay Area, driving to Tahoe, or
			navigating Los Angeles freeways, use our fast explorer to stay
			informed.
		</p>
	</div>
</Layout>
