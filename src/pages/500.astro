---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Server Error - California Road Data">
    <div
        class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4"
    >
        <h1 class="text-6xl md:text-8xl font-black mb-4 tracking-tighter">
            500
        </h1>
        <h2 class="text-2xl md:text-3xl font-bold mb-6 text-black">
            Server Error
        </h2>
        <p class="text-gray-600 max-w-md mx-auto mb-10 text-lg">
            Something went wrong on our end. Please try again later.
        </p>
        <a
            href="/"
            class="inline-flex items-center justify-center px-8 py-4 bg-black text-white font-bold rounded-lg hover:bg-white hover:text-black border-2 border-black transition-all"
        >
            Back to Home
        </a>
    </div>
</Layout>
